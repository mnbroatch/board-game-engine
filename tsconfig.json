{
  "compilerOptions": {
    "lib": ["es2017"],
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "system",
    "moduleResolution":"node",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true, 
    "preserveConstEnums": true,
    "outFile": "../../built/local/tsc.js",
    "strictNullChecks": true,
    "sourceMap": true,
    "types": []
  },
  "include": ["**/*.js", "**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules"]
}
